<!DOCTYPE html>
<html>

<head>
    <title>Registrations - APS Dashboard</title>


    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <style type="text/css">
        .select2-container,
        .select2-container-active,
        #college,
        #name,
        #father_name,
        #father_occupation,
        #date_of_birth,
        #category,
        #email,
        #address,
        #state,
        #dist,
        #contact_no,
        #marital_status,
        #height,
        #weight,
        #paid,
        #tenth_university,
        #tenth_year,
        #tenth_subject,
        #tenth_percentage,
        #twelve_university,
        #twelve_year,
        #twelve_subject,
        #twelve_percentage,
        #graduation_university,
        #graduation_year,
        #graduation_subject,
        #graduation_percentage,
        #document_idcard,
        #tenth_marksheet,
        #twelve_marksheet,
        #photo,
        #pincode,
        #qualification,
        #family_background,
        #tehsil,
        #graduation_document {
            width: 100% !important;
        }
        
        .admin-form {
            display: block;
            margin: auto;
            margin-top: 20px;
            width: max-content;
        }
        
        .controls div input {
            height: 40px;
        }
        
        .select2-search-choice {
            width: 90%;
        }
    </style>
    <%- include('./include-admin/style.ejs') %>
        <link href="/assets/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css" />
        <style>
            @media (min-width: 768px) {
                .form-horizontal .control-label {
                    padding-top: 7px;
                    margin-bottom: 0;
                    text-align: left;
                    width: 100%;
                }
            }
        </style>
</head>




</head>

<body class="hold-transition skin-blue sidebar-mini">

    <%- include('./include-admin/header.ejs') %>
        <div class="content-wrapper">
            <ul class="nav nav-tabs">
                <li>
                    <a href="/admin/news">List</a>
                </li>
                <li>
                    <a href="/admin/news/create/">Create</a>
                </li>

            </ul>
            <% if (errorMessage) { %>
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                    <%= errorMessage %>
                </div>
                <% } %>
                    <section class="content">

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class='box box-info'>
                                    <div class='box-header'>
                                        <h3 class='box-title'>CK Editor <small>Advanced and full of features</small></h3>
                                        <!-- tools box -->
                                        <div class="pull-right box-tools">
                                            <button class="btn btn-info btn-sm" data-widget='collapse' data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                                            <button class="btn btn-info btn-sm" data-widget='remove' data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                                        </div>
                                        <!-- /. tools -->
                                    </div>
                                    <!-- /.box-header -->
                                    <div class='box-body pad'>
                                        <form method="POST" action="/admin/news/edit">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <div class="form-group">
                                                <label>Heading</label>
                                                <input type="text" name="heading" value="<%= news.heading %>" class="form-control" placeholder="Heading">
                                            </div>
                                            <textarea id="editor1" name="news" rows="10" cols="80"><%- news.news %>
                                        </textarea>
                                            <input type="hidden" name="_id" value="<%= news._id %>">
                                            <div class=" col-md-10 submit-row">
                                                <a href="/admin/news/delete/<%= news._id %>" class="btn btn-primary btn-danger">Delete</a>
                                                <button type="submit" class="pt-5 btn btn-primary btn-success">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <!-- /.box -->
                            </div>
                            <!-- /.col-->
                        </div>
                        <!-- ./row -->
                    </section>
                    <!-- /.content -->
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2020 <a>SoftEra Inc.</a></strong> - All rights reserved.
            <div class="pull-right hidden-xs">
            </div>
        </footer>


        </div>
        <!-- ./wrapper -->


        <%- include('./include-admin/scripts.ejs') %>
            <script src="//cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>
            <script src="/assets/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" type="text/javascript"></script>
            <script type="text/javascript">
                $(function() {
                    CKEDITOR.replace('editor1');
                });
            </script>
            <script>
                document.getElementById('navnews').classList.add('active');
            </script>
</body>

</html>